@model Employee.Data.Employees

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Update", "Index", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.EmployeeId);
    <table border="1" cellspacing="30">
        <tr>
            <td>Employee Name : </td>
            <td>@Html.TextBoxFor(Model => Model.EmployeeName)</td>
        </tr>
        <tr>
            <td>Work Type : </td>
            <td>@Html.TextBoxFor(Model => Model.WorkType)</td>
        </tr>
        <tr>
            <td>Experience: </td>
            <td>@Html.TextBoxFor(Model => Model.Experience)</td>
        </tr>
        <tr>
            <td>Salary: </td>
            <td>@Html.TextBoxFor(Model => Model.Salary)</td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Update"/>
            </td>
            <td><a href="/Index">Back</a></td>
        </tr>
    </table>
}

