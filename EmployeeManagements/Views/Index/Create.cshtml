@model Employee.Data.Employees

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Index", FormMethod.Post))
{
    <table border="1">
        <tr>
            <td>Employee ID :</td>
            <td> @Html.TextBoxFor(Model => Model.EmployeeId)</td>
        </tr>
        <tr>
            <td>Employee Name : </td>
            <td>@Html.TextBoxFor(Model => Model.EmployeeName)</td>
        </tr>
        <tr>
            <td>Work Type : </td>
            <td>@Html.TextBoxFor(Model => Model.WorkType)</td>
        </tr>
        <tr>
            <td>Experience: </td>
            <td>@Html.TextBoxFor(Model => Model.Experience)</td>
        </tr>
        <tr>
            <td>Salary: </td>
            <td>@Html.TextBoxFor(Model => Model.Salary)</td>
        </tr>
        <tr>
            <td>
                <input type="submit" />
            </td>
            <td><a href="/Index">Back</a></td>
        </tr>
    </table>
}

